{
  "name": "2k26ball-monorepo",
  "version": "0.1.0",
  "description": "Creator fees fuel an always-on 2026 flywheel: buybacks + burns",
  "private": true,
  "packageManager": "pnpm@8.0.0",
  "scripts": {
    "dev": "sh ./scripts/dev-prepare.sh",
    "dev:app": "pnpm --filter ./app run dev",
    "dev:validator": "solana-test-validator -r ./scripts/validator-ledger --quiet",
    "dev:deploy": "(cd programs/2k26ball && anchor build && anchor deploy)",
    "dev:init": "pnpm --filter ./scripts run init",
    "build": "pnpm -w -s build",
    "test": "pnpm -w -s test",
    "lint": "eslint . --ext .ts,.tsx --ignore-path .gitignore",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "pnpm -w -s clean && rm -rf node_modules pnpm-lock.yaml"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.3",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "workspaces": [
    "programs/*",
    "app",
    "scripts"
  ]
}
